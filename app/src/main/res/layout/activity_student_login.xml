<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Student_login">

    <include
        android:id="@+id/student_login_layout"
        layout="@layout/app_bar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/student_login_layout"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/logo_ggits" />

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="8dp"
            android:text="Students"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:text="Hello there ! Welcome back"
            android:textColor="#696969"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/login_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="25dp"
            android:textColor="#000"
            android:layout_marginTop="20dp"
            android:focusable="true"
            android:background="@drawable/transparent_bd_bordered"
            android:cursorVisible="true"
            android:layout_marginEnd="25dp"
            android:drawableLeft="@drawable/student"
            android:hint="  Email" />

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/login_password"
            android:layout_height="50dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/transparent_bd_bordered"
            android:layout_marginEnd="25dp"
            android:drawableLeft="@drawable/password"
            android:layout_gravity="start"
            android:inputType="textPassword"
            android:hint="  Password" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:id="@+id/forget_pasword"
            android:layout_marginEnd="25dp"
            android:text="Forget your Password ?"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp"
            android:textAlignment="textEnd"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_gradient"
            android:text="SignIn"
            android:layout_marginStart="20dp"
            android:id="@+id/btn_login"
            android:layout_marginEnd="20dp"
            android:textAllCaps="false"
            android:textSize="17dp"
            android:elevation="5dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account ?"
                android:textColor="#000"
                android:layout_alignParentBottom="true"
                android:textAlignment="center"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:text=" SignUp"
                />

        </LinearLayout>

    </LinearLayout>






</RelativeLayout>